{
  "title": "Application Monitoring",
  "uid": "app-monitoring",
  "tags": ["opentelemetry", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(image)",
        "label": "Application",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "current": {
          "text": "api-sample-api",
          "value": "api-sample-api"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{image=~\"$application\"}[5m]) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 85, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{image=~\"$application\"} / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 100, "color": "yellow"},
              {"value": 200, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Transaction Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_total[1m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "reqps", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 4,
      "title": "Apdex Score",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "(sum(rate(http_server_duration_milliseconds_bucket{le=\"100\"}[5m])) + sum(rate(http_server_duration_milliseconds_bucket{le=\"400\"}[5m])) / 2) / sum(rate(http_server_duration_milliseconds_count[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 0.7, "color": "orange"},
              {"value": 0.85, "color": "yellow"},
              {"value": 0.94, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Requests by Method and Status",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "sum by (http_method, http_status_code) (rate(http_server_requests_total[1m]))",
          "legendFormat": "{{http_method}} - {{http_status_code}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Requests/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 6,
      "title": "Error Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "sum by (http_status_code) (rate(http_server_errors_total[1m]))",
          "legendFormat": "{{http_status_code}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {"format": "short", "label": "Errors/sec"},
        {"format": "short"}
      ]
    },
    {
      "id": 7,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "{container_name=~\"$application\"} |~ \"(?i)(error|ERROR|TraceID)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ]
}
