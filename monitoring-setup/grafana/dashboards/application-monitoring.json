{
  "title": "Application Monitoring",
  "uid": "app-monitoring",
  "tags": ["opentelemetry", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "application",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(container_name)",
        "label": "Application",
        "refresh": 1,
        "multi": false,
        "includeAll": false,
        "current": {
          "text": "api",
          "value": "api"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage Over Time",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{container_name=~\"$application\"}[5m]) * 100",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage",
          "show": true,
          "min": 0
        },
        {"format": "short", "show": false}
      ],
      "xaxis": {"show": true},
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "max": true
      },
      "grid": {
        "leftLogBase": 1,
        "leftMax": null,
        "leftMin": 0
      }
    },
    {
      "id": 2,
      "title": "Memory Usage Over Time",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{container_name=~\"$application\"} / 1024 / 1024",
          "legendFormat": "Memory (MiB)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "decmbytes",
          "label": "Memory",
          "show": true,
          "min": 0
        },
        {"format": "short", "show": false}
      ],
      "xaxis": {"show": true},
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "max": true
      },
      "grid": {
        "leftLogBase": 1,
        "leftMax": null,
        "leftMin": 0
      }
    },
    {
      "id": 3,
      "title": "Transaction Rate (req/s)",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9},
      "targets": [
        {
          "expr": "sum by (http_method, http_status_code) (rate(http_server_requests_total[1m]))",
          "legendFormat": "{{http_method}} - {{http_status_code}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec",
          "show": true,
          "min": 0
        },
        {"format": "short", "show": false}
      ],
      "xaxis": {"show": true},
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "max": true
      },
      "grid": {
        "leftLogBase": 1,
        "leftMax": null,
        "leftMin": 0
      }
    },
    {
      "id": 4,
      "title": "Error Rate (errors/s)",
      "type": "graph",
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9},
      "targets": [
        {
          "expr": "sum by (http_status_code) (rate(http_server_errors_total[1m]))",
          "legendFormat": "Status {{http_status_code}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Errors/sec",
          "show": true,
          "min": 0
        },
        {"format": "short", "show": false}
      ],
      "xaxis": {"show": true},
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "legend": {
        "show": true,
        "values": true,
        "current": true,
        "avg": true,
        "max": true
      },
      "grid": {
        "leftLogBase": 1,
        "leftMax": null,
        "leftMin": 0
      }
    },
    {
      "id": 5,
      "title": "Error Logs",
      "type": "logs",
      "datasource": "Loki",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "{container_name=\"$application\"} |~ `(?i)(error|ERROR|TraceID)`",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ]
}
